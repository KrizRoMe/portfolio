---
interface Props {
    date: string
    title: string
    description: string
}

const { date, title, description }: Props = Astro.props
---

<li>
    <div class='flex-start flex items-center pt-3'>
        <div
            class='-ml-[5px] mr-3 h-[9px] w-[9px] rounded-full bg-black dark:bg-white'>
        </div>
        <p class='text-sm'>{date}</p>
    </div>
    <div class='mb-6 ml-4 mt-2'>
        <h4 class='mb-1.5 font-semibold'>{title}</h4>
        <p class='mb-3 text-pretty'>
            {description}
        </p>
    </div>
</li>
